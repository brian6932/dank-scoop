{
    "version": "5.0.1-1",
    "description": "A command-line utility that pipes video streams from various services into a video player.",
    "homepage": "https://streamlink.github.io/",
    "license": "BSD-2-Clause",
    "notes": "You will find your config file here: '$dir\\config'. To customise it, read the docs here: https://streamlink.github.io/cli/config.html#syntax",
    "suggest": {
        "FFmpeg": [
            "ffmpeg",
            "ffmpeg-nightly"
        ],
        "VLC Player": "extras/vlc"
    },
    "architecture": {
        "64bit": {
            "url": "https://nightly.link/streamlink/windows-builds/workflows/main/master/streamlink-5.0.1-1-py310-x86_64.zip.zip",
            "hash": "b9bfc519bedefbe15d15f7943abb731d8bff43cda7d891f1de9874aec095328a"
        },
        "32bit": {
            "url": "https://nightly.link/streamlink/windows-builds/workflows/main/master/streamlink-5.0.1-1-py310-x86.zip.zip",
            "hash": "68fa662b26d3baebede40a4f90cd4595cfefa957655ce1f29f3e2a053ea8ad6b"
        }
    },
    "pre_install": [
        "Expand-7zipArchive \"$dir\\streamlink-$version-py310-x86*.zip\" \"$dir\" -Removal",
        "$python = where.exe py.exe | Select-Object -First 1",
        "$paths = 'bin', 'pkgs'",
        "if ($python) { New-Item -ItemType SymbolicLink -Path \"$dir\\Python\" -Target ($python | Split-Path) | Out-Null }",
        "else { $paths += 'Python' }",
        "$paths | ForEach-Object { Move-Item \"$dir\\streamlink-$version-py310-x86*\\$_\" \"$dir\" }",
        "Remove-Item -Recurse \"$dir\\streamlink-$version-py310-x86*\"",
        "if (!(Test-Path \"$persist_dir\\config\")) {",
        "    if (Test-Path \"$env:APPDATA\\streamlink\\config\") {",
        "        info 'Copying existing ''config'' from ''%APPDATA%\\streamlink\\config'''",
        "        Copy-Item \"$env:APPDATA\\streamlink\\config\" \"$dir\\config\"",
        "    } else {",
        "        New-Item \"$dir\\config\" | Out-Null",
        "    }",
        "}"
    ],
    "bin": [
        [
            "bin\\streamlink.exe",
            "streamlink",
            "--config \"$dir\\config\""
        ],
        "bin\\streamlinkw.exe"
    ],
    "persist": "config",
    "checkver": {
        "script": [
            "((Invoke-WebRequest https://api.github.com/repositories/472790314/actions/artifacts).Content | ConvertFrom-Json).artifacts[0].name -Match 'streamlink-([\\w.-]+)-py' | Out-Null",
            "$verSplit = $matches[1].split('-')",
            "if ($verSplit.Length -eq 3 -and $verSplit[2][0] -eq 'g') { $build = 'nightly' }",
            "else { $build = 'main' }",
            "$build, $matches[1] -join ' '"
        ],
        "regex": "^(?<build>\\S+) (\\S+)$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://nightly.link/streamlink/windows-builds/workflows/$matchBuild/master/streamlink-$version-py310-x86_64.zip.zip"
            },
            "32bit": {
                "url": "https://nightly.link/streamlink/windows-builds/workflows/$matchBuild/master/streamlink-$version-py310-x86.zip.zip"
            }
        }
    }
}
