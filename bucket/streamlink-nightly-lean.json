{
    "version": "5.0.1-6-g4b6077d",
    "description": "A command-line utility that pipes video streams from various services into a video player.",
    "homepage": "https://streamlink.github.io/",
    "license": "BSD-2-Clause",
    "notes": "You will find your config file here: '$dir\\config'. To customise it, read the docs here: https://streamlink.github.io/cli/config.html#syntax",
    "suggest": {
        "FFmpeg": [
            "ffmpeg",
            "ffmpeg-nightly"
        ],
        "VLC Player": "extras/vlc"
    },
    "architecture": {
        "64bit": {
            "url": "https://nightly.link/streamlink/windows-builds/workflows/nightly/master/streamlink-5.0.1-6-g4b6077d-py310-x86_64.zip.zip",
            "hash": "c35d5007789de664f03055c1a0ee4bf035c4544ccee326169b0e464dd139361f"
        },
        "32bit": {
            "url": "https://nightly.link/streamlink/windows-builds/workflows/nightly/master/streamlink-5.0.1-6-g4b6077d-py310-x86.zip.zip",
            "hash": "5acd8580434ad8f578f72d9a9eaa8ca867087cb6e9959695c3ea0035050822dc"
        }
    },
    "pre_install": [
        "$verSplit = $version.split('-')",
        "if ($verSplit.Length -eq 3 -and $verSplit[2].startsWith('g')) { Expand-7zipArchive \"$dir\\streamlink-$version-py310-x86*.zip\" \"$dir\" -Removal }",
        "$python = where.exe py.exe | Select-Object -First 1",
        "$paths = 'bin', 'pkgs'",
        "if ($python) { New-Item -ItemType SymbolicLink -Path \"$dir\\Python\" -Target ($python | Split-Path) | Out-Null }",
        "else { $paths += 'Python' }",
        "$paths | ForEach-Object { Move-Item \"$dir\\streamlink-$version-py310-x86*\\$_\" \"$dir\" }",
        "Remove-Item -Recurse \"$dir\\streamlink-$version-py310-x86*\"",
        "if (!(Test-Path \"$persist_dir\\config\")) {",
        "    if (Test-Path \"$env:APPDATA\\streamlink\\config\") {",
        "        info 'Copying existing ''config'' from ''%APPDATA%\\streamlink\\config'''",
        "        Copy-Item \"$env:APPDATA\\streamlink\\config\" \"$dir\\config\"",
        "    } else {",
        "        New-Item \"$dir\\config\" | Out-Null",
        "    }",
        "}"
    ],
    "bin": [
        [
            "bin\\streamlink.exe",
            "streamlink",
            "--config \"$dir\\config\""
        ],
        "bin\\streamlinkw.exe"
    ],
    "persist": "config",
    "checkver": {
        "script": [
            "((Invoke-WebRequest 'https://api.github.com/repositories/472790314/actions/artifacts').Content | ConvertFrom-Json).artifacts[0].name -match 'streamlink-([\\w.-]+)-py' | Out-Null",
            "$verSplit = $matches[1].split('-')",
            "$zip = '.zip'",
            "if ($verSplit.Length -eq 3 -and $verSplit[2][0] -eq 'g') { $build = 'nightly.link/streamlink/windows-builds/workflows/nightly/master/'; $zip += '.zip' }",
            "else { $build = \"github.com/streamlink/windows-builds/releases/download/$($matches[1])/\" }",
            "$build, $matches[1], $zip -join ' '"
        ],
        "regex": "^(?<build>\\S+) (\\S+) (?<zip>\\S+)?$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://$matchBuildstreamlink-$version-py310-x86_64$matchZip"
            },
            "32bit": {
                "url": "https://$matchBuildstreamlink-$version-py310-x86$matchZip"
            }
        }
    }
}
