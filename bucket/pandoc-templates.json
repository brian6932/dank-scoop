        "Move-Item \"$original_dir\\*\" $installPath -Force"
    ],
    "uninstaller": {
        "script": "Remove-Item '~\\AppData\\Roaming\\pandoc\\templates' -Recurse"
    },
    "checkver": {
        "script": "Get-Date (Invoke-RestMethod https://api.github.com/repositories/115543137/commits/master)[0].commit.committer.date -UFormat %s",
        "regex": "^(\\d+)$"
    },
    "autoupdate": {
        "url": "https://github.com/jgm/pandoc-templates/archive/refs/heads/master.zip"
    }
