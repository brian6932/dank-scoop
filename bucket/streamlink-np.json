{
    "version": "4.0.0-1",
    "description": "A command-line utility that pipes video streams from various services into a video player.",
    "homepage": "https://streamlink.github.io/",
    "license": "BSD-2-Clause",
    "notes": "Streamlink settings can be changed in '%APPDATA%\\streamlink\\config'",
    "suggest": {
        "FFmpeg": [
            "ffmpeg",
            "ffmpeg-nightly"
        ],
        "MPC HC Player": "extras/mpc-hc-fork",
        "VLC Player": "extras/vlc",
        "MPV Player": [
            "extras/mpv",
            "extras/mpv-git"
        ],
        "Streamlink Twitch GUI": "extras/streamlink-twitch-gui"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/streamlink/windows-installer/releases/download/4.0.0-1/streamlink-4.0.0-1-py310-x86_64.exe#/dl.7z",
            "hash": "58da64ee89c4b6a8b95fd401722686c33f71766ad2faf83eeb70fa7a15f23c0d"
        },
        "32bit": {
            "url": "https://github.com/streamlink/windows-installer/releases/download/4.0.0-1/streamlink-4.0.0-1-py310-x86.exe#/dl.7z",
            "hash": "0f1b4c6d56cac9a3aa85ae2c0467971a32a67b4aefa8869aba72756a7865328c"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$env:APPDATA\\streamlink\\config\")) {",
        "    info 'Copying default ''config'' to ''%APPDATA%\\streamlink\\config'''",
        "    ensure \"$env:APPDATA\\streamlink\" | Out-Null",
        "    Copy-Item \"$dir\\`$APPDATA\\streamlink\\config\" \"$env:APPDATA\\streamlink\\config\"",
        "}",
        "Remove-Item \"$dir\\`$*\", \"$dir\\ffmpeg\", \"$dir\\uninstall.exe\" -Recurse"
    ],
    "uninstaller": {
        "script": "if ($purge) { Remove-Item \"$env:APPDATA\\streamlink\" -Recurse}"
    },
    "bin": [
        "bin\\streamlink.exe",
        "bin\\streamlinkw.exe"
    ],
    "checkver": {
        "github": "https://github.com/streamlink/windows-installer",
        "regex": "streamlink-([\\d.-]+)-py310-x86(?:_64)?\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/streamlink/windows-installer/releases/download/$version/streamlink-$version-py310-x86_64.exe#/dl.7z"
            },
            "32bit": {
                "url": "https://github.com/streamlink/windows-installer/releases/download/$version/streamlink-$version-py310-x86.exe#/dl.7z"
            }
        }
    }
}
